<h1>Daily Flight Schedule</h1>


<table>
  <thead>
    <tr>
      <th>
      <th>Flight Number</th>
      <th>Leaves</th>
      <th>Time</th>
      <th>Arrives</th>
      <th>Time</th>
      <th>Seats Remaining</th>
      <th>Miles</th>
    </tr>
  </thead>
  <tbody>
    <% @flights.each do |flight| %>
      <tr>
        <td><button>Book Now</button></td>
        <td><%= flight.number %></td>
        <td><%= flight.departure_code %></td>
        <td>
          <%= flight.departs_at.localtime.strftime("%I:%M %P") %>
          <%= flight.departs_at.localtime.zone %>
        </td>
        <td><%= flight.arrival_code %></td>
        <td></td>
        <td><%= flight.seats %></td>
        <td>
          <% mc = MileageCalculator.new(flight.departure_code, flight.arrival_code) %>
          <%= mc.miles %>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>
<h1>Listing flights</h1>

<table>
  <tr>
    <th>Arrival code</th>
    <th>Departs at</th>
    <th>Departure code</th>
    <th>Distance</th>
    <th>Number</th>
    <th>Seats</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @flights.each do |flight| %>
  <tr>
    <td><%= flight.arrival_code %></td>
    <td><%= flight.departs_at %></td>
    <td><%= flight.departure_code %></td>
    <td><%= flight.distance %></td>
    <td><%= flight.number %></td>
    <td><%= flight.seats %></td>
    <td><%= link_to 'Show', flight %></td>
    <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
    <td><%= link_to 'Destroy', flight, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

